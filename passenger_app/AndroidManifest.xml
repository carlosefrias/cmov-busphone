<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.feup.cmov.busphone_passenger"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.feup.cmov.busphone_passenger.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.feup.cmov.busphone_passenger.SignUpActivity"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name="com.feup.cmov.busphone_passenger.ShowTicketsActivity"
            android:label="@string/title_activity_show_tickets" >
        </activity>
        <activity
            android:name="com.feup.cmov.busphone_passenger.ValidationActivity"
            android:label="@string/title_activity_validation" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.feup.cmov.busphone_passenger.ShowTicketsActivity" />
        </activity>
        <activity
            android:name="com.feup.cmov.busphone_passenger.BuyTicktsActivity"
            android:label="@string/title_activity_buy_ticktes" >
        </activity>
        <activity
            android:name="com.feup.cmov.busphone_passenger.ShowListOfTicketsActivity"
            android:label="@string/title_activity_show_list_of_tickets" >
        </activity>
        <activity
            android:name="com.feup.cmov.busphone_passenger.ShowTicketDetaisActivity"
            android:label="@string/title_activity_show_ticket_detais" >
        </activity>
    </application>

</manifest>
