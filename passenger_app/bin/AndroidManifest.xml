<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.feup.cmov.busphone_passenger"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.feup.cmov.busphone_passenger.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.feup.cmov.busphone_passenger.SignUpActivity"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name="com.feup.cmov.busphone_passenger.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.feup.cmov.busphone_passenger.ItemOptionListActivity"
            android:label="@string/title_itemoption_list" >
        </activity>
        <activity
            android:name="com.feup.cmov.busphone_passenger.ItemOptionDetailActivity"
            android:label="@string/title_itemoption_detail"
            android:parentActivityName=".ItemOptionListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ItemOptionListActivity" />
        </activity>
    </application>

</manifest>
